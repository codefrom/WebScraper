<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        autoReload="true">
		<targets>
			<target name="console" type="Console" layout="${time}|${level:uppercase=true}|${logger:shortName=True}|${threadid}|${message}"/>
			<target name="debugger" type="Debugger" layout="${message}"/>
      <target name="logfile" xsi:type="File" fileName="${shortdate}.log" layout="${longdate}|${level:uppercase=true}|${logger:shortName=True}|${threadid}|${message}"/>
		</targets>
		<rules>
			<logger name="*" minlevel="Debug" writeTo="console,debugger,logfile" />
    </rules>
  </nlog>
  <startup> 
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
</configuration>